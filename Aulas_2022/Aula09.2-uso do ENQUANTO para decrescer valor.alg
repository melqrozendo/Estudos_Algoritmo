algoritmo "contar decrescente"
var
   contador, valor, salto: inteiro
inicio
      contador <- 0
      Escreval("Digite um valor:")
      Leia(valor)
      Escreval("Digite um salto:")
      Leia(salto)
      Enquanto contador <= valor faca
               Escreval(contador)
               contador <- contador + salto
      FimEnquanto
      Escreval("contagem finalizada!")
fimalgoritmo
